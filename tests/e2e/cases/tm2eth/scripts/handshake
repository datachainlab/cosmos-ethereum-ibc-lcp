#!/bin/bash

set -eux

retry() {
    local -r -i max_attempts="$1"; shift
    local -r cmd="$@"
    local -i attempt_num=1

    until $cmd
    do
        if (( attempt_num == max_attempts ))
        then
            echo "Attempt $attempt_num failed and there are no more attempts left!"
            return 1
        else
            echo "Attempt $attempt_num failed! Trying again in $attempt_num seconds..."
            sleep $(( attempt_num++ ))
        fi
    done
}

RLY="${RLY_BIN} --debug"

CHAINID_ONE=ibc0
RLYKEY=testkey
CHAINID_TWO=ibc1
PATH_NAME=ibc01

$RLY tendermint keys show $CHAINID_ONE $RLYKEY

# initialize the light client for {{chain_id}}
retry 5 $RLY lcp-tendermint light init $CHAINID_ONE -f

# add a path between chain0 and chain1
$RLY paths add $CHAINID_ONE $CHAINID_TWO $PATH_NAME --file=./configs/path.json

retry 5 $RLY tx clients $PATH_NAME
sleep 3
retry 5 $RLY lcp activate-client $PATH_NAME --src=true
# ensure finality checkpoint advance
sleep 60
retry 20 $RLY lcp activate-client $PATH_NAME --src=false

retry 20 $RLY tx connection $PATH_NAME -o 20s

TARGET_EPOCH=16
SLOTS_PER_EPOCH=8
RPC_URL="http://localhost:8546"

echo "Waiting for epoch ${TARGET_EPOCH}..."
while true; do
    response=$(curl -s -H "Content-Type: application/json" \
        -d '{"method":"eth_getBlockByNumber","id":1,"params":["finalized", false],"jsonrpc":"2.0"}' \
        ${RPC_URL})
    block_hex=$(echo ${response} | jq -r '.result.number')

    if [ "${block_hex}" == "null" ] || [ -z "${block_hex}" ]; then
        sleep 5
        continue
    fi

    block_number=$((${block_hex}))
    current_epoch=$((${block_number} / ${SLOTS_PER_EPOCH}))
    echo "Current epoch: ${current_epoch}"

    if [ ${current_epoch} -ge ${TARGET_EPOCH} ]; then
        echo "Target epoch ${TARGET_EPOCH} reached"
        break
    fi

    sleep 10
done

retry 20 $RLY tx channel $PATH_NAME -o 20s
